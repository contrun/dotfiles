# Run in non-interactive mode
auto = true
batch = true

# Propagate last modification time
times = true

# Prefer last modified files, but also keep conflicted copies
prefer = newer
copyonconflict = true

# Watch for file modifications and repeated run syncing process
watch = true
repeat = watch

# Detect symlink support for windows automatically
links = true

# Ignore common temporary files
ignore = Name temp.*
ignore = Name *~
ignore = Name .*~
ignore = Name *.o
ignore = Name *.tmp
ignore = Name *.log
ignore = Name .DStore
ignore = Name .DS_Store
ignore = Name *.output

# Ignore artifacts directory of common programming languages
# https://superuser.com/questions/1350918/unison-not-ignoring-paths
ignore = Name {*/,.*/}.direnv
ignore = Name {*/,.*/}.devenv
ignore = Name {*/,.*/}.venv
ignore = Name {*/,.*/}.parcel-cache
ignore = Name {*/,.*/}target
ignore = Name {*/,.*/}node_modules
ignore = Name {*/,.*/}.pnpm
ignore = Name {*/,.*/}.yarn
ignore = Name {*/,.*/}.next
ignore = Name {*/,.*/}.dart_tool
ignore = Name {*/,.*/}flutter/ephemeral
ignore = Name {*/,.*/}Flutter/ephemeral
ignore = Name {*/,.*/}.metals
